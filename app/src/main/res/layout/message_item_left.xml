<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="295dp"
    android:layout_height="wrap_content"
    android:padding="9dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImageLeft"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/profile"
        android:visibility="gone">
    </de.hdodenhof.circleimageview.CircleImageView>


    <TextView
        android:id="@+id/showTextMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/profileImageLeft"
        android:layout_marginLeft="6dp"
        android:text="Test Message"
        android:gravity="left"
        android:padding="8dp"
        android:background="@drawable/background_left">
    </TextView>


    <ImageView
        android:id="@+id/leftImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@+id/profileImageLeft"
        android:layout_marginLeft="6dp"
        android:visibility="visible">
    </ImageView>



    <TextView
        android:id="@+id/currentTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Message seen at: 02:05-28/05/20"
        android:layout_below="@+id/showTextMessage"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:textSize="10sp">
    </TextView>


    <TextView
        android:id="@+id/textSeen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seen"
        android:layout_below="@+id/profileImageLeft"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:textSize="10sp"
        android:visibility="gone">
    </TextView>




</RelativeLayout>